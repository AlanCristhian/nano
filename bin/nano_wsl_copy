#!/bin/bash

if command -v pwsh.exe >/dev/null 2>&1; then
  pwsh="pwsh.exe"
elif command -v powershell.exe >/dev/null 2>&1; then
  pwsh="powershell.exe"
else
  exit 1
fi

pwsh="$pwsh -NoProfile -NoLogo -NonInteractive"

ans0="bin/nano_wsl_clipboard"
cat > "${ans0}"

$pwsh -command "(Get-Content ${ans0} | Out-String -Stream) | Set-Clipboard"
